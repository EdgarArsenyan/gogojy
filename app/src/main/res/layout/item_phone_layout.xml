<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/samsung_gal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivFavIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_favorite_elips"
                android:elevation="20dp"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:padding="4dp"
                android:layout_margin="12dp"
                app:layout_constraintEnd_toEndOf="@+id/samsung_gal"
                app:layout_constraintTop_toTopOf="@+id/samsung_gal" />

            <TextView
                android:id="@+id/tvProdValue"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="21dp"
                android:textAppearance="@style/some_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/samsung_gal" />

            <TextView
                android:id="@+id/tvValue"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:textAppearance="@style/value"
                app:layout_constraintBottom_toBottomOf="@+id/tvProdValue"
                app:layout_constraintStart_toEndOf="@+id/tvProdValue" />

            <TextView
                android:id="@+id/tvSamsung_gal"
                android:layout_width="122dp"
                android:layout_height="13dp"
                android:textAppearance="@style/samsung_gal"
                app:layout_constraintStart_toStartOf="@+id/tvProdValue"
                app:layout_constraintTop_toBottomOf="@+id/tvProdValue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>